		frmFrame.getContentPane().setLayout(new BorderLayout(0, 0));
		
		
		
		
		// show waiting
		// getWaitingPanel();
		// getTabbedPane();
		 getResultsPanel();
	}

	// clean window
	private void cleanWindow(){
		while (frmFrame.getComponentCount()>0) {
			frmFrame.remove(0);
		}
	}
	
